@model IEnumerable<MagicStore.Models.Card>

@{
    ViewData["Title"] = "List";
}

<h1>List</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CardName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CardType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CardColor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CardShortDescripton)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CardLongDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CardPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CardImageUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CardImageThumbnailUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CardFavorite)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CardSoldOut)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CardName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CardType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CardColor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CardShortDescripton)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CardLongDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CardPrice)
            </td>
            <td>
                <img src="@Html.DisplayFor(modelItem => item.CardImageUrl)">
                
            </td>
            <td>
                <img height="100" width="60" src="@Html.DisplayFor(modelItem => item.CardImageThumbnailUrl)">
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CardFavorite)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CardSoldOut)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.CategoryName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CardId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CardId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CardId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
