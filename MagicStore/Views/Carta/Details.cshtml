@model Carta

<div class="container">
    <div class="row">
        <div class="card" style="width: 18rem;">
          <img src="@Model.ImagemUrl" class="img-fluid" alt="...">
          <div class="card-body">
            <h5 class="card-title">@Model.Nome</h5>
            <p class="card-text">@Model.DescricaoDetalhada</p>
             <p class="btn btn-group align-content-lg-end" >
                <a asp-controller="Carta" asp-action="List" 
                   class="btn btn-outline-info">Ver todos os lanches</a>
                <a class="btn btn-primary" id="cartButton" asp-controller="CarrinhoCompra" 
                asp-action="AdicionarItemNoCarrinhoCompra" asp-route-cartaId="@Model.CartaId"> 
                Adicionar @Model.Nome ao carrinho
                </a>
             </p>
          </div>
        </div>
    </div>
</div>